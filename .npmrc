# Increase network timeout to handle network issues
network-timeout=100000

# Retry on network failures
fetch-retries=5
fetch-retry-factor=2
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000

# Use strict SSL but with longer timeout
strict-ssl=true
ca-timeout=30000

# Disable progress bar for cleaner logs
progress=false

# Cache settings
cache-min=3600
cache-max=86400