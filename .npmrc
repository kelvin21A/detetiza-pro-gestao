# Increase network timeout to handle network issues
network-timeout=150000

# Retry on network failures
fetch-retries=8
fetch-retry-factor=2
fetch-retry-mintimeout=30000
fetch-retry-maxtimeout=180000

# Use strict SSL but with longer timeout
strict-ssl=true
ca-timeout=60000

# Disable progress bar for cleaner logs
progress=false

# Cache settings
cache-min=7200
cache-max=172800

# Avoid package-lock issues
package-lock=false

# Avoid peer dependency issues
legacy-peer-deps=true

# Avoid optional dependencies to speed up install
optional=false